<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jansen.thomas.tictactoe.MainActivity">

    <TextView
        android:id="@+id/textView_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text=" " />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonNewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:tag="00"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:tag="01"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:tag="02"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:tag="10"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:tag="11"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:tag="12"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:tag="20"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:tag="21"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:tag="22"
            android:text=" "
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="400dp"
            tools:layout_editor_absoluteY="0dp" />
    </GridLayout>

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:onClick="resetClicked"
        android:text="New Game" />
</LinearLayout>
